@model List<ControleMenu.App.Models.MenuViewModel>

<nav class="navbar navbar-expand-lg navbar-light bg-light rounded mb-4">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <!-- Left nav -->
        <ul class="nav navbar-nav mr-auto">
            @if (Model != null)
            {
                foreach (var menu in Model)
                {
                    if(menu.Submenu != null && menu.Submenu.Any())
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href='@Url.Action(menu.Acao,menu.Controlador)'>@menu.Nome</a>
                            <ul class="dropdown-menu">
                                @Html.Partial("_Submenu", menu.Submenu)
                            </ul>
                        </li>
                    }
                    else 
                    {
                        <li class="nav-item"><a class="nav-link" href='@Url.Action(menu.Acao,menu.Controlador)'>@menu.Nome</a></li>
                    }
                }
            }
            else
            {
                <li class="nav-item"><a class="nav-link text-danger" href="#">Nenhum item de menu cadastrado</a></li>
            }
        </ul>
    </div>
</nav>